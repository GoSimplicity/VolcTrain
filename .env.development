# =====================================
# 部署环境
# =====================================
DEPLOY_ENV=development

# =====================================
# 数据库配置 (MySQL)
# =====================================
DB_HOST=mysql
DB_PORT=3306
DB_NAME=volctraindb
DB_USER=root
DB_PASSWORD=root

# =====================================
# Redis配置
# =====================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=v6SxhWHyZC7S
REDIS_DB=0

# =====================================
# JWT认证配置
# =====================================
JWT_ACCESS_SECRET=your_jwt_access_secret_here_minimum_64_characters_required_for_security_dev
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_minimum_64_characters_required_for_security_dev

# =====================================
# 服务端口配置
# =====================================
API_PORT=8888
COMMON_PORT=8889
MONITORING_PORT=8890
TRAINING_PORT=8891
FRONTEND_PORT=80

# =====================================
# 日志配置
# =====================================
LOG_LEVEL=debug
LOG_MODE=console
SERVICE_NAME=volctrain

# =====================================
# 存储配置
# =====================================
STORAGE_PATH=/data/volctrain
CHECKPOINT_STORAGE_PATH=/data/volctrain/checkpoints
MODEL_STORAGE_PATH=/data/volctrain/models
LOG_STORAGE_PATH=/data/volctrain/logs

# =====================================
# 安全配置
# =====================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# CORS配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost:5173

# =====================================
# Kubernetes配置
# =====================================
K8S_CONFIG_PATH=/path/to/kubeconfig
K8S_NAMESPACE=volctrain
K8S_CLUSTER_NAME=volctrain-cluster

# =====================================
# 通知配置
# =====================================
# 钉钉通知配置
DINGTALK_WEBHOOK_URL=https://oapi.dingtalk.com/robot/send?access_token=your_token
DINGTALK_SECRET=your_dingtalk_secret

# 邮件通知配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com