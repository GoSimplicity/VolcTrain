# VolcTrain 环境变量配置模板
# 复制此文件为 .env 并根据实际环境修改配置

# =====================================
# 数据库配置 (MySQL)
# =====================================
# Docker容器配置
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=volctraindb
MYSQL_USER=root
MYSQL_PASSWORD=root

# 应用连接配置
DB_HOST=mysql
DB_PORT=3306
DB_NAME=volctraindb
DB_USER=root
DB_PASSWORD=root

# =====================================
# Redis配置
# =====================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =====================================
# JWT认证配置
# =====================================
JWT_ACCESS_SECRET=volctrain_access_secret_key_minimum_64_characters_required_security
JWT_REFRESH_SECRET=volctrain_refresh_secret_key_minimum_64_characters_required_security

# =====================================
# 服务端口配置
# =====================================
API_PORT=8888
COMMON_PORT=8889
MONITORING_PORT=8890
TRAINING_PORT=8891
FRONTEND_PORT=80

# =====================================
# 监控配置
# =====================================
# Grafana配置
GRAFANA_PASSWORD=admin123

# Prometheus配置
PROMETHEUS_PORT=9091
PROMETHEUS_URL=http://prometheus:9090

# 指标收集配置
METRICS_COLLECT_INTERVAL=30s
METRICS_PORT=9090
ENABLE_METRICS=true
ENABLE_ALERTS=true
ENABLE_NOTIFICATIONS=true

# =====================================
# 日志配置
# =====================================
LOG_LEVEL=info
LOG_MODE=console
SERVICE_NAME=volctrain

# =====================================
# 部署环境
# =====================================
DEPLOY_ENV=production

# =====================================
# 安全配置
# =====================================
# API限流配置
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# CORS配置
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost:5173